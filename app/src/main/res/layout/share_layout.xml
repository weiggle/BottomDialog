<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e3e3e3"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingTop="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="请选择分享平台"
        android:textSize="14sp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/share_wechat"
            android:gravity="center"
            android:text="微信"
            android:textSize="12sp"
        />

        <TextView
            android:id="@+id/share_friend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/share_wechatmoments"
            android:gravity="center"
            android:text="朋友圈"
            android:textSize="12sp"
        />

        <TextView
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/share_qq"
            android:gravity="center"
            android:text="QQ"
            android:textSize="12sp"
        />

        <TextView
            android:id="@+id/share_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/share_sinaweibo"
            android:gravity="center"
            android:text="微博"
            android:textSize="12sp"
        />


    </LinearLayout>

    <TextView
        android:id="@+id/share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/cancel_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消分享"
    />

</LinearLayout>